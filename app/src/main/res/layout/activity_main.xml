<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.asura.walkmyandroidplaces.MainActivity"
        android:orientation="vertical"
        android:layout_gravity="bottom|center"
        android:gravity="bottom|center">

    <ImageView
            android:id="@+id/androidImageView"
            android:contentDescription="@string/android_image"
            android:src="@drawable/android_plain"
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:layout_marginBottom="24sp"/>

    <TextView
            android:id="@+id/trackerButtonTextView"
            android:text="@string/press_the_button_to_start_tracking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24sp"/>

    <Button
            android:id="@+id/trackerButton"
            android:text="@string/start_tracker_button"
            android:clickable="true"
            android:onClick="toggleTracking"
            android:layout_marginBottom="24sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/addressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24sp"/>

</LinearLayout>